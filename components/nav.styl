.nav
    width 100vw
    display flex
    align-items center
    padding-inline 23px
    height 64px
    backdrop-filter: blur(30px);
    background #FFFFFF44
    background-size cover
    background-image url('/navbg.png')

#login 
    justify-self end
    
    button
        background none
        border none
        transition color 0.2s ease
        &:hover
            color white
.dialog
    &::backdrop
        backdrop-filter blur(30px)
@property --num {
  syntax: "<integer>";
  initial-value: 50;
  inherits: false;
}

.text {
  transition: --num 0.1s;
  counter-set: num var(--num);
  font: 400 20px system-ui;
width calc(fit-content +20px)
text-align: center
display flex
align-items center
}
.text::after {
  content: counter(num);
  position: relative
  left 10px
  top 0
}